{
  "manifest_version": 2,
  "name": "CodeceptJS TestTools",
  "description": "Create CodeceptJS acceptance tests while surfing your website.",
  "version": "0.0.2",
  "devtools_page": "html/devtools.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js", "js/libs/selector.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": ["<all_urls>", "contextMenus", "storage", "clipboardWrite"]
}
